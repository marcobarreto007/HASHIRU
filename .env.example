# Network & Server
HOST=localhost
PORT=8080

# Defaults & Flags
TIMEOUT_DEFAULT=60
AUDIT_ENABLED=1
DELETE_MODE=trash           # trash | hard
PY_UNSAFE_DEFAULT=0         # 0 = SAFE; 1 = UNSAFE (exige CONFIRMO por comando)

# Exec allowlist (comandos sem confirmação)
EXEC_ALLOWLIST=cmd,ipconfig,ping,tracert,where,tasklist,python,git

# Paths
DATA_DIR=./data
LOGS_DIR=./logs
